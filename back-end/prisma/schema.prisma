generator client {
  provider = "prisma-client-js"
  output   = "./node_modules/@prisma/client"
}

datasource db {
  provider = "mysql" // Cambia con il tuo database (es. "postgresql", "sqlite")
  url      = env("DATABASE_URL")
}

model Studio {
  id       Int    @id @default(autoincrement())
  nome     String
  email    String @unique
  password String
  clienti  Cliente[] // Campo opposto per la relazione con Cliente
}

model Cliente {
  id        Int      @id @default(autoincrement())
  nome      String
  telefono  String
  studioId  Int
  studio    Studio   @relation(fields: [studioId], references: [id])
}